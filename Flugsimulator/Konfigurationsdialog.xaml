<Window x:Class="Flugsimulator.Konfigurationsdialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Flugsimulator"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="Konfigurationsdialog von Flügen (Düsenflugzeuge)">

    <!-- Hintergrundfarbe des Fensters -->
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionColorKey}}"/>
    </Window.Background>

    <Grid>
        <!-- Layout: 11 Zeilen, 5 Spalten -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Eingabefelder für Flugzeug-Konfiguration -->
        <Label Content="Kennung" Grid.Column="0" Grid.Row="0" Margin="5"/>
        <Label Content="Düsenflugzeugtyp" Grid.Column="0" Grid.Row="1" Margin="5"/>
        <Label Content="Startposition x, y, h" Grid.Column="0" Grid.Row="2" Margin="5"/>
        <Label Content="Zielposition x, y, h" Grid.Column="0" Grid.Row="3" Margin="5"/>
        <Label Content="Reiseflughöhe (m)" Grid.Column="0" Grid.Row="4" Margin="5"/>
        <Label Content="Flugstrecke pro Takt (m)" Grid.Column="0" Grid.Row="5" Margin="5"/>
        <Label Content="Steighöhe pro Takt (m)" Grid.Column="0" Grid.Row="6" Margin="5"/>
        <Label Content="Sinkhöhe pro Takt (m)" Grid.Column="0" Grid.Row="7" Margin="5"/>
        <Label Content="Anzahl Plätze" Grid.Column="0" Grid.Row="8" Margin="5"/>
        <Label Content="Flug..." Grid.Column="0" Grid.Row="9" HorizontalContentAlignment="Right" Margin="5"/>

        <!-- TextBoxen für Eingaben -->
        <TextBox x:Name="tbKennung" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="7"/>
        <ComboBox x:Name="cbTyp" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="7"/>
        <TextBox x:Name="tbStartX" Grid.Column="1" Grid.Row="2" Margin="7"/>
        <TextBox x:Name="tbStartY" Grid.Column="2" Grid.Row="2" Margin="7"/>
        <TextBox x:Name="tbStartH" Grid.Column="3" Grid.Row="2" Margin="7"/>
        <TextBox x:Name="tbZielX" Grid.Column="1" Grid.Row="3" Margin="7"/>
        <TextBox x:Name="tbZielY" Grid.Column="2" Grid.Row="3" Margin="7"/>
        <TextBox x:Name="tbZielH" Grid.Column="3" Grid.Row="3" Margin="7"/>
        <TextBox x:Name="tbFlughoehe" Grid.Column="1" Grid.Row="4" Margin="7"/>
        <TextBox x:Name="tbFlugstrecke" Grid.Column="1" Grid.Row="5" Margin="7"/>
        <TextBox x:Name="tbSteighoehe" Grid.Column="1" Grid.Row="6" Margin="7"/>
        <TextBox x:Name="tbSinkhoehe" Grid.Column="1" Grid.Row="7" Margin="7"/>
        <TextBox x:Name="tbAnzahlPlaetze" Grid.Column="1" Grid.Row="8" Margin="7"/>

        <!-- Buttons für Aktionen -->
        <Button x:Name="btnLaden" Grid.Column="1" Grid.Row="9" Content="Laden" Margin="7" Click="btnLaden_Click"/>
        <Button x:Name="btnSpeichern" Grid.Column="2" Grid.Row="9" Content="Speichern/Update" Margin="7" Click="btnSpeichern_Click"/>
        <Button x:Name="btnLoeschen" Grid.Column="3" Grid.Row="9" Content="Löschen" Margin="7" Click="btnLoeschen_Click"/>
        <Button x:Name="btnStarten" Grid.Column="4" Grid.Row="9" Content="Starten" Margin="7" Click="btnStarten_Click"/>
        <Button x:Name="btnKonfigBeenden" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="10" Content="Konfigurationsdialog beenden" Margin="7" IsCancel="True"/>
    </Grid>
</Window>
